<% layout('/layout/page') -%>
<% block('title', "Post") %>

<p class="lead">Edit post</p>
<div class="col-lg-offset-11 col-lg-10">
    <a href= href="" onclick="$('<form method=POST action=/posts/<%= post._id %>/destroy/>').submit();return false">Delete Post</a>
    <span class="help-block error"></span>
</div>

<form class="form-horizontal post-form" name="post-edit-form">
    <div class="form-group">
        <label for="input-title" class="col-lg-2 control-label">Title</label>

        <div class="col-lg-10">
            <input name="title" value=<%=post.title%> type="text" class="form-control" id="input-title" placeholder="title">
        </div>
    </div>
    <div class="form-group">
        <label for="input-body" class="col-lg-2 control-label">Body</label>

        <div class="col-lg-10">
            <input name="body" value=<%=post.body%> type="text" class="form-control" id="input-body" placeholder="body">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary" data-loading-text="Ok">Ok</button>
            <span class="help-block error"></span>
        </div>
    </div>
</form>

<script>
    $(document.forms['post-edit-form']).on('submit', function() {
        var form = $(this);
        $('.error', form).html('');
        $(":submit", form).button("loading");
        $.ajax({
            url: "/posts/<%= post._id %>/edit",
            method: "POST",
            data: form.serialize(),
            complete: function() {
                $(":submit", form).button("reset");
            },
            statusCode: {
                200: function() {
                    form.html("Изменения сохранены").addClass('alert-success');
                    window.location.href = "/posts/<%= post._id %>";
                },
                403: function(jqXHR) {
                    var error = JSON.parse(jqXHR.responseText);
                    $('.error', form).html(error.message);
                }
            }
        });
        return false;
    });
</script>